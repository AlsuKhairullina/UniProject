<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Meme</title>
    <link rel="icon" href="/Header/icon.png"/>
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body>
<header>
    <nav>
    <div class="spaceBetween">
        <div class="oneLine" style="margin-top: 20px">
            <div >
                <a href="/Home/Index"><img src="/Header/icon.png" width="100" height="100"></a>
            </div>
            <div class="welcomeCenter" id="icon">
                <div>Государственный</div>
                <div>мемный</div>
                <div>университет</div>
            </div>
        </div>

        <div class="oneLine">
            <a href="/Account/Registration" class="" style="margin-top: 45px">Регистрация</a>

                <form action="/Account/Profile">
                <button class="button oneLine">
                    <img src="/Header/Person.svg" class="buttonText buttonPic" style="vertical-align: middle" width="30" height="30" alt="Person"/>
                    <div class="buttonText text">
                        Личный кабинет
                    </div>
                </button>
            </form>

        </div>
    </div>

    <hr >
    <div class="spaceAround " id="menu">
        <div>
            <a href="/Home/About" class="header">Об университете</a>
        </div>
        <div>
            <a href="/Home/Profiles" class="header">Специальности</a>
        </div>
        <div>
            <a href="/Home/ForEnrolle" class="header">Абитуриенту</a>
        </div>
        <div>
            <a href="/Home/ForStudent" class="header">Студенту</a>
        </div>
    </div>
    <hr>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="center">
    2021-Meme
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>